<img src="https://fakeimg.pl/600x300" alt="stitch-logo">

<div class="aside">

        <p>
            <img src="<%= user.profile_pic_url %>" alt="<%= user.username %>-profile-picture">
        </p>
        <p>
            <%= user.username %>

                <form action="/users/<%= user.username %>?_method=put" method="post">
                    <input type="hidden" name="follow" value="1">
                    <button><%= buttonText %></button>
                </form>

        </p>
        <p>
            <%= user.description %>
        </p>
        <p>
            <a href="/<%= user.username %>/followers">followers <%= followerCount %></a>
            
        </p>
        <p>
            <a href="/<%= user.username %>/following">following <%= followingCount %></a>
            
        </p>

</div>

<div class="main">

    <% for (let post of posts) { %> 
    
        <p>
            <%= post.post %>
            <form action="/posts/<%= post.id %>?_method=put">
                <button>see post</button>
            </form>
        </p>
    
    <% } %>

</div>

<nav>
    <a href="/">home</a>
    <a href="/search">search</a>
    <a href="/posts/new">create a stitch</a>
    <a href="/<%= sessionUser.username %>">profile</a>
</nav>